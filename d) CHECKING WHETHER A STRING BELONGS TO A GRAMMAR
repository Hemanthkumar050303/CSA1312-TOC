#include <stdio.h>
#include <string.h>

int main(void) {
    char s[100];
    int i, isBinary = 1, isValid0n1n = 1;
    int length;

    printf("Enter a binary string to check: ");
    scanf("%s", s);

    length = strlen(s);

    // Step 1: Check if the string contains only 0s and 1s
    for (i = 0; i < length; i++) {
        if (s[i] != '0' && s[i] != '1') {
            isBinary = 0;
            break;
        }
    }

    if (!isBinary) {
        printf("The string is NOT valid (only 0s and 1s allowed).\n");
        return 0;
    }

    // Step 2: Check if string length is even
    if (length % 2 != 0) {
        printf("The string does NOT satisfy the condition 0n1n (length is odd).\n");
        printf("String NOT Accepted.\n");
        return 0;
    }

    // Step 3: Check first half for all 0s and second half for all 1s
    int half = length / 2;
    for (i = 0; i < half; i++) {
        if (s[i] != '0') {
            isValid0n1n = 0;
            break;
        }
    }

    for (i = half; i < length && isValid0n1n; i++) {
        if (s[i] != '1') {
            isValid0n1n = 0;
            break;
        }
    }

    if (isValid0n1n) {
        printf("The string satisfies the condition 0n1n.\n");
        printf("String ACCEPTED.\n");
    } else {
        printf("The string does NOT satisfy the condition 0n1n.\n");
        printf("String NOT Accepted.\n");
    }

    return 0;
}
