#include <stdio.h>
#include <string.h>

int main(void) {
    char s[100];
    int i, isValid = 1, validStructure = 1;
    int length, countStartZeros = 0, countEndZeros = 0;

    printf("Enter a binary string to check: ");
    scanf("%s", s);

    length = strlen(s);

    // Step 1: Check if string contains only 0s and 1s
    for (i = 0; i < length; i++) {
        if (s[i] != '0' && s[i] != '1') {
            isValid = 0;
            break;
        }
    }

    if (!isValid) {
        printf("String is NOT valid (only 0s and 1s allowed)\n");
        return 0;
    }

    // Step 2: Count leading 0s
    i = 0;
    while (s[i] == '0') {
        countStartZeros++;
        i++;
    }

    // Step 3: Skip all 1s
    while (s[i] == '1') {
        i++;
    }

    // Step 4: Count trailing 0s and check for invalid characters
    int temp = i;
    while (i < length) {
        if (s[i] == '0') {
            countEndZeros++;
        } else {
            validStructure = 0;
            break;
        }
        i++;
    }

    // Step 5: Final validation
    if (!validStructure) {
        printf("The string does not satisfy the condition 0n1?0n\n");
        printf("String NOT Accepted\n");
    } else if (countStartZeros == countEndZeros) {
        printf("The string satisfies the condition 0n1?0n\n");
        printf("String Accepted\n");
    } else {
        printf("The string does not satisfy the condition 0n1?0n\n");
        printf("String NOT Accepted\n");
    }

    return 0;
}
