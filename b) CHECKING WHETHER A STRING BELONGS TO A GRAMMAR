#include <stdio.h>
#include <string.h>

int main(void) {
    char s[100];
    int i, isBinary = 1, isPalindrome = 1;
    int length;

    printf("Enter a binary string to check: ");
    scanf("%s", s);

    length = strlen(s);

    // Check if the string contains only 0s and 1s
    for (i = 0; i < length; i++) {
        if (s[i] != '0' && s[i] != '1') {
            isBinary = 0;
            break;
        }
    }

    if (!isBinary) {
        printf("The string is NOT valid (only 0s and 1s allowed).\n");
        return 0;
    }

    // Check if the string is a palindrome
    for (i = 0; i < length / 2; i++) {
        if (s[i] != s[length - 1 - i]) {
            isPalindrome = 0;
            break;
        }
    }

    if (isPalindrome) {
        printf("The string is a palindrome.\n");
        printf("String is ACCEPTED.\n");
    } else {
        printf("The string is NOT a palindrome.\n");
        printf("String is NOT accepted.\n");
    }

    return 0;
}
